<% provide(:title, "Login") %>
<h1>Log In</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(:session, url: login_path) do |f| %>
			
			<%= f.label :email %>
			<%= f.text_field :email %>
			
			<%= f.label :password %>
			<%= f.password_field :password %>
			
			<%= f.submit "Login", class: "btn btn-primary" %>
			
		<% end %>	
		
		<p>New User? <%= link_to "Sign up now!", signup_path %></p>
	</div>
</div>
